	</tr>
	<tr>
		<td colspan="7">&nbsp;</td>
	</tr>
	<tr>
		<td colspan="7">
			<table id="table5" width="100%" border="1" cellpadding="0" cellspacing="0">
			<tr>
				<th width="2">NO</th>
				<th>Kode M.K</th>
				<th>NAMA MATA KULIAH</th>
				<th width="90">KREDIT (K)</th>
				<th>NILAI(N)</th>
				<th width="50">Bobot Nilai</th>
			
			</tr>
			<% count = 0 %>
			<% @khs.each do |khs| %>
			<tr>
				<td align="center"><%= count += 1 %></td>
				<td><%= khs.teaching.subject.kode %></td>
				<td><%= khs.teaching.subject.nama %></td>
				<td align="center"><%= khs.teaching.sks %></td>
				<td align="center"><%= khs.nilai_lambang %></td>
				<td align="center"><%= khs.bobot_nilai %></td>
			<tr>
			<% end %>
			<tr>
				<td style="padding:3px 3px;" colspan="3"><b>Total SKS</b></td>
				<% z = 0; @khs.each { |n| z += n.teaching.sks } %>
				<td align="center"><%= z %></td>
				<td></td>
				<% k = 0.0; @khs.each { |n| k += n.bobot_nilai } %>
				<td align='center'><%= k %></td>
			</tr>
			<tr>
				<td style="padding:3px 3px;" colspan="5"><b>Indeks Prestasi Kumulatif (IPK)</b></td>
				<td align='center'><%= number_with_precision(k / z.to_f, :precision => 2)  %></td>
			</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td colspan="7">&nbsp;</td>
	</tr>
	<tr>
		<td colspan="7">
			<table width="100%" cellpadding="0" cellspacing="0">
				<tr>
					<td>
						<small>
