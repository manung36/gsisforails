	</tr>
	<tr>
		<td colspan="7">&nbsp;</td>
	</tr>
	<tr>
		<td colspan="7">
		<table id="table5" width="100%" border="1" cellpadding="0" cellspacing="0">
		<tr>
			<th width="4">NO</th>
			<th>KODE MK</th>
			<th>NAMA MATA KULIAH</th>
			<th>DOSEN PENGAMPU</th>
			<th width="10">SKS</th>
		</tr>
		<% count = 0 %>
		<% @krs.each do |krs| %>
		<tr>
			<td align="center"><%= count += 1 %></td>
			<td><%= krs.teaching.subject.kode %></td>
			<td><%= krs.teaching.subject.nama %></td>
			<td><%= krs.teaching.dosen.nama %></td>
			<td align="center"><%= krs.teaching.sks %></td>
		<tr>
		<% end %>
			<tr>
			<td style="padding:3px 3px;" colspan="4"><b>Total SKS</b></td>
			<% z = 0; @krs.each { |n| z += n.teaching.sks } %>
			<td align="center"><%= z %></td>
		</tr>
		</table>
		</td>
	</tr>
	<tr>
		<td colspan="7">&nbsp;</td>
	</tr>
	<tr>
		<td colspan="7">
		<table width="100%" cellpadding="0" cellspacing="0">
