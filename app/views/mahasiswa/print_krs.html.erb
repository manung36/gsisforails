	<tr>
  	<td rowspan="2" align="left" ><%= image_tag('ylpp.jpg', size: '70x70') %></td>
	</tr>
	<tr>
  	<td colspan="6" align="center" width='100'><font size="4"><strong><%= nama_kampus %></strong><br /><%= alamat_kampus %></font></td>
	</tr>

	<tr>
  	<td colspan="7" align="center"><hr noshade size="2"></td>
	</tr>
	<tr>
   	<td colspan="7" align="center"><h2>KRS (Kartu Rencana Studi)</h2></td>
	</tr>

	<tr>
		<td width="100">Nama</td>
		<td width="24" align="center">:</td>
		<td width="430"><%= @mahasiswa.nama_lengkap %></td>
		<td colspan='2' width='40'>Semester</td>
		<td width="20" align="center">:</td>
		<td width="70"><%= @smtMhs %></td>
		<td width="70"><%= @smt %></td>
