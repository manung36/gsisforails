			<td colspan="3">&nbsp;</td>
		</tr>
		<tr>
			<td colspan="3">&nbsp;</td>
		</tr>
		<tr>
			<td align="center"><%= @mahasiswa.nama_lengkap %></td>
			<td align="center"></td>
			<td align="center">ARTATHI EKA SURYANDARI, SSiT</td>
		</tr>
		<tr>
			<td colspan="3">&nbsp;</td>
		</tr>
		<tr>
			<td colspan="3" align='center'><font size='0.5em'>Dokumen ini diproses secara elektronik (E-DOCUMENT) dianggap sah setelah ada tanda tangan dan stempel</font></td>
		</tr>
		</table>
		</td>
	</tr>
</table>




