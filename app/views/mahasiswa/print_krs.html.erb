	<tr>
		<td width="100">NIM</td>
		<td width="24" align="center">:</td>
		<td><%= @mahasiswa.nim %></td>

	</tr>
	<tr>
		<td width="110">PRODI/JENJANG</td>
		<td align="center">:</td>
		<td><%= "#{@mahasiswa.course.nama}/ #{@mahasiswa.course.jenjang}" %></td>
